---
import { Image } from "@astrojs/image/components";
import Layout from "@layouts/Layout.astro";
---

<Layout title="Elena Kustova - Portfolio - Welcome Page">
  <div
    class="welcome-screen m-auto relative h-screen w-screen flex items-center"
  >
    <div class="fixed top-0 left-0 w-screen h-screen">
      <Image
        format={"webp"}
        alt="Picture of Elena Kustova"
        src="../assets/mypic.jpg"
        aspectRatio="4:5"
        width={600}
        height={650}
      />
    </div>
    <div
      class="relative title w-full text-gray-300 text-6xl text-center font-serif font-bold"
    >
      <h1>
        <p>Elena Kustova</p>
        <p>Russian</p>
        <p>Photographer</p>
        <p>Based in Italy</p>
      </h1>
      <div class="py-8"></div>
      <div class="flex text-center px-8">
        <a type="button" href="/en" id="eng-btn"><button>en</button></a>
        <a type="button" href="/ru" id="ru-btn"><button>ru</button></a>
        <a type="button" href="/en" id="it-btn"><button>it</button></a>
      </div>
    </div>
  </div>
</Layout>

<style lang="scss">
  .welcome-screen {
    img {
      width: 100%;
      height: 100% !important;
      object-position: 50% 50%;
      object-fit: cover;
    }

    button {
      @apply border border-gray-300 p-4 mx-2;
      width: 100%;
    }
  }
</style>
