<style is:global lang="scss">
:root {
	--header-h: 60px;
	--bg-color: #fdfdfd;
	--text-color: #2d2d2d;
	--accent: #ffb777;
	--accent_2: #e9edc9;
	--accent_3: #ccd5ae;
	--nav-anim-dur: 250ms;
	--nav-h: 50vh; // set at runtime
	--ease-io-quintic: cubic-bezier(0.86, 0, 0.07, 1);

	&.dark {
		--bg-color: #2d2d2d;
		--text-color: #fdfdfd;
	  --accent: #84a98c;
	  --accent_2: #52796f;
	  --accent_3: #354f52;
	}
}

body {
	@apply bg-secondary text-primary min-h-screen;
}

main {
	@apply px-4;
	transform: translateY(0%);
	filter: grayscale(0);
	opacity: 1;
	transition: all var(--nav-anim-dur) ease;
	min-height: calc(100vh - var(--header-h));

	&.nav-open {
		filter: grayscale(1);
		opacity: 0.6;
	}
}
</style>
