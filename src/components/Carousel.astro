---
import { Picture } from "@astrojs/image/components";

export interface Props {
  title: string;
  urls: string[];
}

const { title, urls } = Astro.props;
---

<h1>{title}</h1>
<ul>
  {
    urls.map((src: string) => (
      <li class="picture-wrap">
        <Picture
          class="pic"
          formats={["jpg", "webp"]}
          alt=""
          src={src}
          widths={[200, 400, 800, 1200]}
          aspectRatio={"2:3"}
        />
      </li>
    ))
  }
</ul>
<style lang="scss"></style>
