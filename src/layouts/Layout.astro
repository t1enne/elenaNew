---
import Nav from "@components/Nav.astro";
import StylesG from "@components/StylesG.astro"
import { ViewTransitions } from "astro:transitions";
import { defaultLang } from "@src/i18n/ui";

export interface Props {
	title: string;
}

const { title } = Astro.props;
const lang = Astro.params.lang || defaultLang;
---

<!DOCTYPE html>
<html lang={lang} x-data :class="$store.darkMode?.on && 'dark'">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
		<StylesG />
	</head>
	<body
		:class="navOpen && 'overflow-hidden'"
		x-data="{ navOpen: false }"
		>
		<Nav />
		<main :class="navOpen && 'nav-open'">
			<slot />
		</main>
	</body>
</html>

<script>
import "@src/scripts/store";
</script>
